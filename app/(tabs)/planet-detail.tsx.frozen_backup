import { useRouter } from 'expo-router';
import React, { useEffect } from 'react';

export default function PlanetDetailScreen() {
  const router = useRouter();

  useEffect(() => {
    // üîí Redirect to coming soon screen
    router.replace('/(tabs)/planetary-coming-soon');
  }, []);

  return null;
}

/* üîí FROZEN CODE - DO NOT DELETE
 * This code is preserved for easy re-enable after launch.
 * To re-enable: Remove the redirect above and uncomment this section.

import { PlanetStatusPanel } from '@/components/PlanetStatusPanel';
import { Borders, DarkTheme, ElementAccents, Spacing, Typography } from '@/constants/DarkTheme';
import { useLanguage } from '@/contexts/LanguageContext';
import { useProfile } from '@/contexts/ProfileContext';
import type { Element } from '@/services/MomentAlignmentService';
import {
    getPlanetSnapshot,
    type BilingualText,
    type DivineName,
    type PlanetSnapshot,
} from '@/services/PlanetDetailService';
import { Ionicons } from '@expo/vector-icons';
import { LinearGradient } from 'expo-linear-gradient';
import { useLocalSearchParams, useRouter } from 'expo-router';
import React, { useEffect, useState } from 'react';
import {
    ActivityIndicator,
    Pressable,
    ScrollView,
    StyleSheet,
    Text,
    View,
} from 'react-native';
import { useSafeAreaInsets } from 'react-native-safe-area-context';

export default function PlanetDetailScreen() {
  const router = useRouter();
  const params = useLocalSearchParams();
  const insets = useSafeAreaInsets();
  const { language, t } = useLanguage();
  const { profile } = useProfile();

  const [snapshot, setSnapshot] = useState<PlanetSnapshot | null>(null);
  const [loading, setLoading] = useState(true);

  // Extract params
  const planetId = (params.planetId as string) || 'sun';
  const mode = (params.mode as 'now' | 'next') || 'now';
  const userElement = profile?.derived?.element as Element | undefined;
  const isPremium = false; // TODO: integrate with actual subscription state

  useEffect(() => {
    loadPlanetData();
  }, [planetId, mode]);

  const loadPlanetData = async () => {
    try {
      setLoading(true);

      // Get current planetary times (simplified - you may have these in context)
      const now = new Date();
      const sunrise = new Date(now);
      sunrise.setHours(6, 30, 0, 0);
      const sunset = new Date(now);
      sunset.setHours(18, 30, 0, 0);
      const nextSunrise = new Date(sunrise);
      nextSunrise.setDate(nextSunrise.getDate() + 1);

      // Validate planetId before calling service
      if (!planetId || typeof planetId !== 'string') {
        console.error('[PlanetDetail] Invalid planetId:', planetId);
        setSnapshot(null);
        return;
      }

      const snapshotData = await getPlanetSnapshot(
        {
          planetId: planetId.toLowerCase(),
          mode,
          userElement,
          isPremium,
        },
        sunrise,
        sunset,
        nextSunrise,
        now
      );

      if (!snapshotData) {
        console.warn('[PlanetDetail] No snapshot data returned');
      }

      setSnapshot(snapshotData);
    } catch (error) {
      console.error('[PlanetDetail] Error loading data:', error);
      setSnapshot(null);
    } finally {
      setLoading(false);
    }
  };

  const getText = (bilingual: BilingualText): string => {
    if (language === 'fr' && bilingual.fr) return bilingual.fr;
    if (language === 'ar' && bilingual.ar) return bilingual.ar;
    return bilingual.en;
  };

  if (loading) {
    return (
      <View style={[styles.container, { paddingTop: insets.top }]}>
        <ActivityIndicator size="large" color={ElementAccents.fire.primary} />
      </View>
    );
  }

  if (!snapshot) {
    return (
      <View style={[styles.container, { paddingTop: insets.top }]}>
        <Text style={styles.errorText}>
          {t('planetDetail.error')}
        </Text>
      </View>
    );
  }

  const elementAccent = snapshot.element
    ? ElementAccents[snapshot.element.key]
    : ElementAccents.fire;

  return (
    <View style={[styles.container, { paddingTop: insets.top }]}>
      {/* HEADER */}
      <View style={styles.header}>
        <Pressable onPress={() => router.back()} style={styles.backButton}>
          <Ionicons name="arrow-back" size={24} color={DarkTheme.textPrimary} />
        </Pressable>
        <Text style={styles.headerTitle} numberOfLines={1}>
          {t('planetDetail.title')}
        </Text>
        <View style={[styles.modeBadge, { backgroundColor: `${elementAccent.primary}22` }]}>
          <Text style={[styles.modeBadgeText, { color: elementAccent.primary }]}>
            {getText(snapshot.nowLabel)}
          </Text>
        </View>
      </View>

      <ScrollView
        style={styles.scrollView}
        contentContainerStyle={[styles.scrollContent, { paddingBottom: insets.bottom + 20 }]}
        showsVerticalScrollIndicator={false}
      >
        {/* HERO CARD - Planet Snapshot */}
        <LinearGradient
          colors={[`${elementAccent.primary}15`, `${elementAccent.primary}05`]}
          style={styles.heroCard}
        >
          {/* Planet Glow Halo */}
          <View style={[styles.planetGlow, { backgroundColor: `${elementAccent.primary}10` }]} />
          
          <View style={styles.heroTop}>
            <View style={styles.heroLeft}>
              <View style={[styles.symbolContainer, { 
                backgroundColor: `${elementAccent.primary}20`,
                shadowColor: elementAccent.primary,
                shadowOpacity: 0.3,
                shadowRadius: 12,
                shadowOffset: { width: 0, height: 0 },
              }]}>
                <Text style={styles.planetSymbol}>{snapshot.symbol}</Text>
              </View>
              <View style={styles.planetInfo}>
                <Text style={styles.planetName} numberOfLines={1}>
                  {getText(snapshot.planetName)}
                </Text>
                <Text style={styles.planetNameAr} numberOfLines={1}>
                  {snapshot.arabicName}
                </Text>
                {snapshot.transitSnapshot?.motion === 'retrograde' && (
                  <View style={[styles.motionPill, { backgroundColor: `${ElementAccents.fire.primary}25` }]}>
                    <Text style={[styles.retrogradeSymbol, { color: ElementAccents.fire.primary }]}>‚Ñû</Text>
                    <Text style={[styles.motionPillText, { color: ElementAccents.fire.primary }]} numberOfLines={1}>
                      {t('planetDetail.status.motionRetrograde')}
                    </Text>
                  </View>
                )}
              </View>
            </View>

            {/* Resonance Score Badge */}
            {snapshot.resonance && (
              <View style={[styles.resonanceBadge, {
                shadowColor: elementAccent.primary,
                shadowOpacity: 0.4,
                shadowRadius: 8,
                shadowOffset: { width: 0, height: 2 },
              }]}>
                <Text style={styles.resonanceScore}>{snapshot.resonance.score}</Text>
                <Text style={styles.resonanceLabel} numberOfLines={1}>
                  {getText(snapshot.resonance.label)}
                </Text>
              </View>
            )}
          </View>

          {/* Chips Row - Sign, Element */}
          <View style={styles.chipsRow}>
            {snapshot.sign && (
              <View style={[styles.chip, { backgroundColor: elementAccent.glow }]}>
                <Text style={styles.chipLabel} numberOfLines={1}>
                  {t('planetDetail.labels.sign')}:
                </Text>
                <Text style={[styles.chipValue, { color: elementAccent.primary }]} numberOfLines={1}>
                  {getText(snapshot.sign.label)}
                </Text>
              </View>
            )}
            {snapshot.element && (
              <View style={[styles.chip, { backgroundColor: elementAccent.glow }]}>
                <Text style={styles.chipLabel} numberOfLines={1}>
                  {t('planetDetail.labels.element')}:
                </Text>
                <Text style={[styles.chipValue, { color: elementAccent.primary }]} numberOfLines={1}>
                  {getText(snapshot.element.label)}
                </Text>
              </View>
            )}
          </View>

          {/* Day & Hour Rulers */}
          {(snapshot.dayRuler || snapshot.hourRuler) && (
            <View style={styles.rulersRow}>
              {snapshot.dayRuler && (
                <View style={styles.rulerChip}>
                  <Text style={styles.rulerLabel}>
                    {t('planetDetail.labels.dayRuler')}:
                  </Text>
                  <Text style={styles.rulerValue}>
                    {getText(snapshot.dayRuler)}
                  </Text>
                </View>
              )}
              {snapshot.hourRuler && (
                <View style={styles.rulerChip}>
                  <Text style={styles.rulerLabel}>
                    {t('planetDetail.labels.hourRuler')}:
                  </Text>
                  <Text style={styles.rulerValue}>
                    {getText(snapshot.hourRuler)}
                  </Text>
                </View>
              )}
            </View>
          )}
        </LinearGradient>

        {/* PLANET STATUS CARD */}
        {snapshot.transitSnapshot && (
          <PlanetStatusPanel
            transitSnapshot={snapshot.transitSnapshot}
            signLabel={snapshot.sign?.label ? getText(snapshot.sign.label) : undefined}
            elementAccentColor={elementAccent.primary}
          />
        )}

        {/* RUHANI FOCUS CARD */}
        <View style={styles.card}>
          <Text style={styles.cardTitle} numberOfLines={1}>
            {t('planetDetail.sections.ruhaniFocus')}
          </Text>
          <Text style={styles.cardSubtitle} numberOfLines={2}>
            {t('planetDetail.sections.ruhaniFocusDesc')}
          </Text>

          <View style={styles.guidanceSection}>
            {snapshot.ruhaniFocus.map((item, index) => (
              <View key={index} style={styles.bulletRow}>
                <Text style={[styles.bullet, { color: elementAccent.primary }]}>‚ú¶</Text>
                <Text style={styles.bulletText} numberOfLines={3}>
                  {getText(item)}
                </Text>
              </View>
            ))}
          </View>
        </View>

        {/* CAUTIONS CARD */}
        <View style={styles.card}>
          <Text style={styles.cardTitle} numberOfLines={1}>
            {t('planetDetail.sections.cautions')}
          </Text>
          <Text style={styles.cardSubtitle} numberOfLines={2}>
            {t('planetDetail.sections.cautionsDesc')}
          </Text>

          <View style={styles.guidanceSection}>
            {snapshot.cautions.map((item, index) => (
              <View key={index} style={styles.bulletRow}>
                <Text style={styles.bullet}>‚ö†</Text>
                <Text style={styles.bulletText} numberOfLines={3}>
                  {getText(item)}
                </Text>
              </View>
            ))}
          </View>
        </View>

        {/* TIMING WINDOWS CARD */}
        <View style={styles.card}>
          <Text style={styles.cardTitle} numberOfLines={1}>
            {t('planetDetail.sections.timing')}
          </Text>
          
          <View style={styles.timingSection}>
            <Text style={styles.timingLabel} numberOfLines={1}>
              {t('planetDetail.timing.generalWindow')}:
            </Text>
            <Text style={styles.timingValue} numberOfLines={2}>
              {t(
                `planetDetail.timing.${snapshot.timing.generalWindow.key}`
              )}
            </Text>
          </View>

          {snapshot.timing.notes && (
            <View style={styles.timingNotes}>
              <Text style={styles.timingNotesIcon}>‚ÑπÔ∏è</Text>
              <Text style={styles.timingNotesText} numberOfLines={3}>
                {getText(snapshot.timing.notes)}
              </Text>
            </View>
          )}
        </View>

        {/* PRACTICE METHOD CARD */}
        <View style={styles.card}>
          <Text style={styles.cardTitle} numberOfLines={1}>
            {getText(snapshot.practice.title)}
          </Text>
          <Text style={styles.cardSubtitle} numberOfLines={2}>
            {t('planetDetail.practice.subtitle')}
          </Text>

          {/* Steps */}
          <View style={styles.practiceSteps}>
            {snapshot.practice.steps.map((step, index) => (
              <View key={index} style={styles.practiceStep}>
                <View style={[styles.stepNumber, { backgroundColor: elementAccent.glow }]}>
                  <Text style={[styles.stepNumberText, { color: elementAccent.primary }]}>
                    {index + 1}
                  </Text>
                </View>
                <Text style={styles.stepText} numberOfLines={4}>
                  {getText(step)}
                </Text>
              </View>
            ))}
          </View>

          {/* Adab (Etiquette) */}
          <View style={styles.adabSection}>
            <Text style={styles.adabTitle} numberOfLines={1}>
              {t('planetDetail.practice.adab')}:
            </Text>
            {snapshot.practice.adab.map((item, index) => (
              <View key={index} style={styles.bulletRow}>
                <Text style={styles.bullet}>‚Ä¢</Text>
                <Text style={styles.adabText} numberOfLines={3}>
                  {getText(item)}
                </Text>
              </View>
            ))}
          </View>

          {/* Duration hint */}
          {snapshot.practice.durationHint && (
            <Text style={styles.durationHint} numberOfLines={1}>
              ‚è± {getText(snapshot.practice.durationHint)}
            </Text>
          )}
        </View>

        {/* PERSONAL RESONANCE CARD */}
        {snapshot.resonance && (
          <View style={styles.card}>
            <Text style={styles.cardTitle}>
              {t('planetDetail.sections.resonance')}
            </Text>

            {/* Score Meter */}
            <View style={styles.resonanceRow}>
              <View style={styles.resonanceMeter}>
                <View style={styles.meterTrack}>
                  <LinearGradient
                    colors={[elementAccent.primary, elementAccent.glow]}
                    start={{ x: 0, y: 0 }}
                    end={{ x: 1, y: 0 }}
                    style={[styles.meterFill, { width: `${snapshot.resonance.score}%` }]}
                  />
                </View>
                <Text style={styles.meterLabel}>
                  {snapshot.resonance.score}/100 ‚Äî {getText(snapshot.resonance.label)}
                </Text>
              </View>
            </View>

            {/* Why */}
            <Text style={styles.resonanceWhy} numberOfLines={3}>
              {getText(snapshot.resonance.why)}
            </Text>
          </View>
        )}

        {/* PREMIUM DIVINE NAMES CARD */}
        <View style={[styles.card, !isPremium && styles.cardLocked]}>
          <View style={styles.premiumHeader}>
            <Text style={styles.cardTitle}>
              {t('planetDetail.sections.divineNames')}
            </Text>
            {isPremium && (
              <View style={[styles.premiumBadge, { backgroundColor: elementAccent.primary }]}>
                <Text style={styles.premiumBadgeText}>‚ú® PREMIUM</Text>
              </View>
            )}
          </View>

          {isPremium && snapshot.premium ? (
            <>
              {/* Personalization Note */}
              <Text style={styles.personalizationNote}>
                {getText(snapshot.premium.personalization.whyNeeded)}
              </Text>

              {/* Divine Names */}
              {snapshot.premium.divineNames.map((divineName: DivineName, index: number) => (
                <View key={divineName.id} style={[styles.divineNameCard, { borderLeftColor: elementAccent.primary }]}>
                  {/* Arabic & Latin */}
                  <View style={styles.divineNameHeader}>
                    <Text style={styles.divineNameArabic}>{divineName.ar}</Text>
                    <Text style={styles.divineNameLatin}>{divineName.latin}</Text>
                  </View>

                  {/* Meaning */}
                  <Text style={styles.divineNameMeaning}>
                    {getText(divineName.meaning)}
                  </Text>

                  {/* Why This Matches */}
                  <View style={styles.divineNameWhy}>
                    <Text style={styles.divineNameWhyLabel}>
                      {t('planetDetail.divineNames.whyLabel')}:
                    </Text>
                    <Text style={styles.divineNameWhyText}>
                      {getText(divineName.whyThisMatches)}
                    </Text>
                  </View>

                  {/* Practice Suggestions */}
                  <View style={styles.divineNameSuggestions}>
                    <View style={styles.suggestionRow}>
                      <Text style={styles.suggestionLabel}>üìø</Text>
                      <Text style={styles.suggestionText}>
                        {getText(divineName.countSuggestion)}
                      </Text>
                    </View>
                    <View style={styles.suggestionRow}>
                      <Text style={styles.suggestionLabel}>‚è∞</Text>
                      <Text style={styles.suggestionText}>
                        {getText(divineName.timingSuggestion)}
                      </Text>
                    </View>
                  </View>
                </View>
              ))}
            </>
          ) : (
            <View style={styles.lockedContent}>
              <Ionicons name="lock-closed" size={40} color={DarkTheme.textTertiary} />
              <Text style={styles.lockedTitle}>
                {t('planetDetail.premium.lockedTitle')}
              </Text>
              <Text style={styles.lockedBody}>
                {t('planetDetail.premium.lockedBody')}
              </Text>
              <Pressable
                style={[styles.upgradeButton, { backgroundColor: elementAccent.primary }]}
                onPress={() => {
                  // TODO: Navigate to paywall
                  console.log('Navigate to premium');
                }}
              >
                <Text style={styles.upgradeButtonText}>
                  {t('planetDetail.premium.upgradeButton')}
                </Text>
              </Pressable>
            </View>
          )}
        </View>

        {/* PREMIUM APPETITE CARDS */}
        {!isPremium && (
          <>
            {/* Planetary-Divine Resonance */}
            <View style={[styles.card, styles.premiumAppetiteCard]}>
              <LinearGradient
                colors={['rgba(255, 215, 0, 0.15)', 'rgba(255, 215, 0, 0.05)']}
                style={styles.premiumAppetiteGradient}
              >
                <View style={styles.premiumAppetiteBlur} />
                <View style={styles.premiumAppetiteContent}>
                  <View style={styles.premiumAppetiteIcon}>
                    <Ionicons name="lock-closed" size={24} color="#FFD700" />
                  </View>
                  <Text style={styles.premiumAppetiteTitle} numberOfLines={1}>
                    {t('planetDetail.premium.planetaryDivineResonance.title')}
                  </Text>
                  <Text style={styles.premiumAppetiteDescription} numberOfLines={3}>
                    {t('planetDetail.premium.planetaryDivineResonance.description')}
                  </Text>
                  <Pressable
                    style={styles.premiumAppetiteButton}
                    onPress={() => console.log('Navigate to premium')}
                  >
                    <Text style={styles.premiumAppetiteButtonText} numberOfLines={1}>
                      {t('ui.unlockPremium')}
                    </Text>
                    <Ionicons name="arrow-forward" size={16} color="#FFD700" />
                  </Pressable>
                </View>
              </LinearGradient>
            </View>

            {/* Zikr Timing Optimizer */}
            <View style={[styles.card, styles.premiumAppetiteCard]}>
              <LinearGradient
                colors={['rgba(255, 215, 0, 0.15)', 'rgba(255, 215, 0, 0.05)']}
                style={styles.premiumAppetiteGradient}
              >
                <View style={styles.premiumAppetiteBlur} />
                <View style={styles.premiumAppetiteContent}>
                  <View style={styles.premiumAppetiteIcon}>
                    <Ionicons name="time-outline" size={24} color="#FFD700" />
                  </View>
                  <Text style={styles.premiumAppetiteTitle} numberOfLines={1}>
                    {t('planetDetail.premium.zikriTiming.title')}
                  </Text>
                  <Text style={styles.premiumAppetiteDescription} numberOfLines={3}>
                    {t('planetDetail.premium.zikriTiming.description')}
                  </Text>
                  <Pressable
                    style={styles.premiumAppetiteButton}
                    onPress={() => console.log('Navigate to premium')}
                  >
                    <Text style={styles.premiumAppetiteButtonText} numberOfLines={1}>
                      {t('ui.unlockPremium')}
                    </Text>
                    <Ionicons name="arrow-forward" size={16} color="#FFD700" />
                  </Pressable>
                </View>
              </LinearGradient>
            </View>
          </>
        )}

        {/* FOOTER DISCLAIMER */}
        <Text style={styles.disclaimer} numberOfLines={2}>
          {t('ui.forReflectionOnly')}
        </Text>
      </ScrollView>
    </View>
  );
}

